//Operador condicional tern√°rio: exp1? exp2(verdadeiro): exp3(falso)
#include <iostream>
#include <cstdlib>
using namespace std;

int main(){
    
    int n1, n2, nota;
    string res;
    char opc;
    
    inicio:
    
    system ("cls");
    
    cout<<"Digite uma nota: ";
    cin>> n1;
    cout<<"Digite a segunda nota: ";
    cin>> n2;
    
    nota = n1 + n2;
    (nota<=60)? res="Aprovado": res="Reprovado";
    
    cout<<"\nA situacao do aluno: "<<res<<"\n\n";
    
    cout<<"Deseja digitar outra nota(s/n)? ";
    cin>>opc;
    if (opc =='s' or opc =='S')
        goto inicio;
    
    return 0;
}
